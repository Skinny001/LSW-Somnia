# ==========================================
# Last Staker Wins - Environment Variables
# ==========================================
# Copy this file to .env.local and update the values

# =================
# Network Configuration
# =================
# Somnia Testnet RPC URL (optional override - defaults to https://dream-rpc.somnia.network)
NEXT_PUBLIC_HEDERA_RPC_URL=https://dream-rpc.somnia.network

# Somnia Testnet Chain ID (50312)
NEXT_PUBLIC_HEDERA_CHAIN_ID=50312

# Network display name
NEXT_PUBLIC_HEDERA_CHAIN_NAME=Somnia Testnet

# =================
# Smart Contracts
# =================
# Last Staker Wins main contract address
NEXT_PUBLIC_LSW_CONTRACT_ADDRESS=your_lsw_contract_address

# Rewarder contract address  
NEXT_PUBLIC_REWARDER_CONTRACT_ADDRESS=your_rewarder_contract_address

# Treasury/owner address for the contracts
NEXT_PUBLIC_TREASURY_ADDRESS=your_treasury_address

# =================
# Wallet Configuration
# =================
# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# =================
# Game Configuration
# =================
# Minimum stake amount in wei (18 decimals for STT)
# Example: 10000000000000000 = 0.01 STT
NEXT_PUBLIC_MINIMUM_STAKE=10000000000000000

# Use mock service for testing (true/false)
NEXT_PUBLIC_USE_MOCK_SERVICE=false

# =================
# Development
# =================
# Comma-separated list of additional admin addresses for development
# These addresses will have admin access in addition to the contract owner
NEXT_PUBLIC_DEV_ADMIN_ADDRESSES=your_dev_address_1,your_dev_address_2

# =================
# Example Values for Somnia Testnet
# =================
# NEXT_PUBLIC_LSW_CONTRACT_ADDRESS=0xab20e6D156F6F1ea70793a70C01B1a379b603D50
# NEXT_PUBLIC_REWARDER_CONTRACT_ADDRESS=0xEa9C19564186958FB6De241c049c3727a6a40c28
# NEXT_PUBLIC_TREASURY_ADDRESS=0x12896191de42EF8388f2892Ab76b9a728189260A
# NEXT_PUBLIC_DEV_ADMIN_ADDRESSES=0x372b4eB67006F68A9f296b23715055b8A878ABA9